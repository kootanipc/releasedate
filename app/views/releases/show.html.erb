<div class="container">
  <p id="notice"><%= notice %></p>
  <div class="child row">
    <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
      <div class="release-text">
        <h2>商品詳細画面</h2>
        <p class="left"><strong>商品名:</strong><%= @release.name %></p>
        <p class="left"><strong>商品の説明:</strong><%= @release.content %></p>
        <p class="left"><strong>発売日:</strong><%= @release.date %></p>
    <p class="right">
          <strong>登録日時:</strong>
          <%= @release.created_at.strftime("%Y/%m/%d %p %l:%M") %>
        </p>
      </div>
      <%= link_to '戻る', releases_path, class: 'btn btn-default btn-block' %>
    </div>
  </div>
</div>
